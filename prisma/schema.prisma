datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id          String   @id @default(uuid())
  name        String
  description String
  created_at  DateTime @default(now())

  @@map("categories")
}

model Specification {
  id          String   @id @default(uuid())
  name        String
  description String
  created_at  DateTime @default(now())

  @@map("specifications")
}
